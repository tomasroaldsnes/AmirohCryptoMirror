<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AmirohCryptoMirror.AmountPage"
             BackgroundColor="Black">
    <AbsoluteLayout HorizontalOptions="FillAndExpand" BackgroundColor="Transparent">

        <Entry x:Name="entryAmount"
               HeightRequest="50" 
               WidthRequest="300"
               FontSize="Large"
               Placeholder="Amount owned of Coin" 
               PlaceholderColor="White" 
               HorizontalOptions="CenterAndExpand"
               BackgroundColor="Black"
               TextColor="White"
               Keyboard="Numeric" 
               Completed="Amount_Completed"
               AbsoluteLayout.LayoutBounds="0.5, 0.5"
               AbsoluteLayout.LayoutFlags="PositionProportional"></Entry>
        
    </AbsoluteLayout>
</ContentPage>